<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPOther"
    tools:context=".views.fragments.FirstTimeConsultationFragment"
    android:nestedScrollingEnabled="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/buttonSave"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/green">
            <TextView
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/save"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/imageViewStatistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medical_history"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:textColor="?attr/primaryTextColor"
            android:fontFamily="@font/lato"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_below="@id/buttonSave"
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA2"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vices"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="?attr/primaryTextColor"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"/>
                <ListView
                    android:layout_marginTop="40dp"
                    android:layout_gravity="bottom"
                    android:nestedScrollingEnabled="true"
                    android:id="@+id/listViewVice"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA2"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/antecedents"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:layout_margin="10dp"
                    android:textColor="?attr/primaryTextColor"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"/>
                <ListView
                    android:layout_marginTop="40dp"
                    android:layout_gravity="bottom"
                    android:nestedScrollingEnabled="true"
                    android:id="@+id/listViewMaladie"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@id/linear2"
            android:layout_below="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA2"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allergies_food"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:textColor="?attr/primaryTextColor"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"/>
                <ListView
                    android:layout_marginTop="40dp"
                    android:layout_gravity="bottom"
                    android:nestedScrollingEnabled="true"
                    android:id="@+id/listViewAllergieF"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA2"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allergies_drugs"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:layout_margin="10dp"
                    android:textColor="?attr/primaryTextColor"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"/>
                <ListView
                    android:layout_marginTop="40dp"
                    android:layout_gravity="bottom"
                    android:nestedScrollingEnabled="true"
                    android:id="@+id/listViewAllergieD"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
