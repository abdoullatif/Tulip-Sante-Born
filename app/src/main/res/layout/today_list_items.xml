<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorA"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="5dp"
            android:text="Head"
            android:textColor="?attr/primaryTextColor"
            android:fontFamily="@font/lato"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewBody"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:padding="5dp"
            android:text="just some random dsf news that is going to pop upust some random news that is going to pop upust some random news that is going to pop up"
            android:textColor="?attr/primaryTextColor"
            android:fontFamily="@font/lato"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:text="12/12/2021"
            android:textColor="@color/blue"
            android:fontFamily="@font/lato"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>