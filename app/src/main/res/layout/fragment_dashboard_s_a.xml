<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorP"
    android:padding="15dp"
    tools:context=".views.fragments.DashboardSAFragment">
    <TextView
        android:id="@+id/imageViewDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="@string/dashboard"
        android:textSize="20sp"
        android:textColor="?attr/primaryTextColor"
        android:fontFamily="@font/lato"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/linearLayoutDash"
        android:layout_below="@id/imageViewDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:elevation="0dp"
            app:cardBackgroundColor="?attr/colorA"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewEmergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="100dp"
                    android:elevation="20dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/red"
                    android:layout_marginBottom="0dp">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:src="@drawable/icon_ambulance"
                        android:layout_height="80dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text=""/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@string/tools"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:elevation="0dp"
            app:cardBackgroundColor="?attr/colorA"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewDay"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:text="Wednesday July 3rd"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:text="12:00"
                    android:textColor="@color/blue"
                    android:textSize="80sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linearLayoutDash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/imageViewStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/dashStatisticsBarChart"
                    android:layout_width="match_parent"
                    android:background="?attr/colorA"
                    android:padding="10dp"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
