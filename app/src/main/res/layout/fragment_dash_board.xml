<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorP"
    tools:context=".views.fragments.DashBoardFragment">
    <TextView
        android:padding="10dp"
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="?attr/primaryTextColor"
        android:fontFamily="@font/lato"
        android:textStyle="bold"/>
    <TextView
        android:paddingStart="15dp"
        android:layout_below="@+id/textViewName"
        android:id="@+id/imageViewDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard"
        android:textSize="20sp"
        android:textColor="?attr/primaryTextColor"
        android:fontFamily="@font/lato"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/linearLayoutDash"
        android:padding="15dp"
        android:layout_below="@id/imageViewDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="10dp"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:elevation="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="?attr/colorA"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/createNewPatient"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@string/create_new"
                    android:selectAllOnFocus="false"
                    android:linksClickable="false"
                    android:autoLink="all"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/viewAllPatient"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@string/view_all"
                    android:textStyle="bold"
                    android:selectAllOnFocus="false"
                    android:linksClickable="false"
                    android:autoLink="all"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="13dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="?attr/colorPD">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:src="@drawable/ic_fever"
                        android:layout_height="80dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textViewNumberPatients"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/primaryTextColor"
                    android:textStyle="bold"
                    android:textSize="35sp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Patient"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:elevation="0dp"
            app:cardBackgroundColor="?attr/colorA"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewEmergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="100dp"
                    android:elevation="20dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/red"
                    android:layout_marginBottom="0dp">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:src="@drawable/icon_ambulance"
                        android:layout_height="80dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text=""/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@string/emergency"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:elevation="0dp"
            app:cardBackgroundColor="?attr/colorA"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewConferencing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="100dp"
                    android:elevation="20dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/blue"
                    android:layout_marginBottom="0dp">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:src="@drawable/ic_baseline_video_call_24"
                        android:layout_height="80dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text=""/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@string/conferencing"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:elevation="0dp"
            app:cardBackgroundColor="?attr/colorA"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/viewAllProfile"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@string/view_all"
                    android:textStyle="bold"
                    android:selectAllOnFocus="false"
                    android:linksClickable="false"
                    android:autoLink="all"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight="1"
                    android:foregroundTintMode="@color/opaque1"
                    android:scaleType="centerCrop"
                    android:id="@+id/profileImageDocDash"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/blank_profile_pic"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="@color/light_grey"
                    app:civ_border_color="@color/blue"/>
                <TextView
                    android:id="@+id/textViewDocName"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linearLayoutDash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/imageViewStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/dashStatisticsBarChart"
                    android:layout_width="match_parent"
                    android:background="?attr/colorA"
                    android:padding="10dp"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewReference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_people" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="Reference"
                        android:textColor="@color/green"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingBottom="10dp"
                android:id="@+id/imageViewToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/historique"
                android:textSize="20sp"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA">
                <TextView
                    android:id="@+id/viewAllMessage"
                    android:padding="10dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@string/view_all"
                    android:textStyle="bold"
                    android:selectAllOnFocus="false"
                    android:linksClickable="false"
                    android:autoLink="all"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:elevation="20dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="?attr/colorPD"
                        android:layout_marginBottom="0dp">
                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="80dp"
                            android:src="@drawable/ic_history_white"
                            android:layout_height="80dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text=""/>
                    <TextView
                        android:id="@+id/textViewHistorique"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="@string/historique"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
