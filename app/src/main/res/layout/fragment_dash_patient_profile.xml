<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPOther"
    tools:context=".views.fragments.DashPatientProfileFragment">
    <TextView
        android:padding="15dp"
        android:id="@+id/imageViewDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard"
        android:textSize="20sp"
        android:textColor="?attr/primaryTextColor"
        android:fontFamily="@font/lato"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_below="@id/imageViewDashboard"
        android:id="@+id/linearLayoutSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summary"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA2"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageViewHuman"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginEnd="20dp"
                        android:id="@+id/linearLayoutAge"
                        android:layout_toEndOf="@id/imageViewHuman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textViewAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="..."
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="40sp"
                            android:textStyle="normal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="@string/age"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="22sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <View
                        android:layout_toEndOf="@id/linearLayoutAge"
                        android:layout_width="1dp"
                        android:layout_height="90dp"
                        android:id="@+id/view"
                        android:background="?attr/primaryTextColor"/>
                    <LinearLayout
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/linearLayoutAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textViewWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="..."
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="40sp"
                            android:textStyle="normal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="@string/weight"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="22sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@+id/imageViewHuman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textViewHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="..."
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="40sp"
                            android:textStyle="normal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="@string/height"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="22sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/imageViewStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_weight_variations"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA2">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/dashStatisticsBarChart"
                    android:layout_width="match_parent"
                    android:background="?attr/colorA2"
                    android:padding="10dp"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
