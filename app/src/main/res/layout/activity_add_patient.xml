<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPDOther"
    tools:context=".views.activities.AddPatientActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="?attr/colorPDOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="?attr/backButton"
            android:layout_marginBottom="0dp">
            <LinearLayout
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageViewBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patient"
                    android:textSize="14sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/lato"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/tuliplog"
            android:layout_gravity="center"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSave"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/green"
            android:layout_marginBottom="0dp">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_patient"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/lato"/>
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.Toolbar>

     <LinearLayout
         android:layout_below="@id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:orientation="vertical">
         <TextView
             android:id="@+id/imageViewStatistics"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/new_patient_profile"
             android:textSize="20sp"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:textColor="@color/colorWhite"
             android:fontFamily="@font/lato"
             android:textStyle="bold"/>

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             app:cardCornerRadius="5dp"
             android:elevation="0dp"
             app:cardBackgroundColor="?attr/colorA"
             android:layout_marginBottom="10dp">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <!-- first linear layout -->
                 <LinearLayout
                     android:layout_alignParentLeft="true"
                     android:padding="10dp"
                     android:orientation="vertical"
                     android:id="@+id/linearLayout1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">

                     <de.hdodenhof.circleimageview.CircleImageView
                         android:foregroundTintMode="@color/opaque1"
                         android:layout_gravity="center"
                         android:id="@+id/profileCircularImage"
                         android:layout_width="100dp"
                         android:layout_height="100dp"
                         android:src="@drawable/ic_fever"
                         app:civ_circle_background_color="@color/colorAccent"
                         app:civ_border_width="2dp"
                         app:civ_border_color="@color/blue"/>
                     <TextView
                         android:id="@+id/textViewChangeProfilePic"
                         android:padding="10dp"
                         android:fontFamily="@font/lato"
                         android:textStyle="bold"
                         android:textColor="@color/blue"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/change_photo"
                         android:layout_gravity="center"/>
                 </LinearLayout>
                 <!-- Second linear layout -->
                 <ScrollView
                     android:id="@+id/linearLayout2"
                     android:layout_width="650dp"
                     android:layout_toEndOf="@id/linearLayout1"
                     android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="650dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/imageViewBasicDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic Details"
                            android:textSize="20sp"
                            android:paddingBottom="10dp"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/last_name"/>
                            <EditText
                                android:id="@+id/editTextSurname"
                                android:inputType="textPersonName"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/first_name"/>
                            <EditText
                                android:id="@+id/editTextFirstName"
                                android:inputType="textPersonName"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/gender"/>
                            <RadioGroup
                                android:id="@+id/radioGroupGender"
                                android:layout_gravity="center"
                                android:layout_width="310dp"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/radioMale"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/male"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                                <RadioButton
                                    android:id="@+id/radioFemale"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/female"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                                <RadioButton
                                    android:id="@+id/radioOther"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/other"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/date_of_birth"/>
                            <EditText
                                android:id="@+id/editTextDateOfBirth"
                                android:focusable="false"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/situation_matrimoniale"/>
                            <RadioGroup
                                android:id="@+id/radionGroupSituation"
                                android:layout_gravity="center"
                                android:layout_width="310dp"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/radioMarried"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/married"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                                <RadioButton
                                    android:id="@+id/radioSingle"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/single"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                                <RadioButton
                                    android:id="@+id/Divorced"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/divorced"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/nationality"/>
                            <RadioGroup
                                android:id="@+id/radionGroupNationality"
                                android:layout_gravity="center"
                                android:layout_width="310dp"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/radioCitizen"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/citizen"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                                <RadioButton
                                    android:id="@+id/radioForeigner"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/foreigner"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/numero_d_identit"/>
                            <EditText
                                android:id="@+id/editTextIdentity"
                                android:inputType="textShortMessage"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/blood_group"/>
                            <Spinner
                                android:focusable="false"
                                android:id="@+id/bloodGroupSpinner"
                                android:layout_width="310dp"
                                android:background="@drawable/bg_edittext"
                                android:layout_height="45dp"/>
                        </LinearLayout>


                        <TextView
                            android:id="@+id/imageViewContactDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_details"
                            android:textSize="20sp"
                            android:paddingBottom="10dp"
                            android:textColor="?attr/secondaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/primary_phone_number"/>
                            <EditText
                                android:id="@+id/editTextPrimaryMobile"
                                android:inputType="phone"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/second_contact"/>
                            <EditText
                                android:id="@+id/editTextSecondaryMobile"
                                android:inputType="phone"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/email"/>
                            <EditText
                                android:id="@+id/editTextEmail"
                                android:inputType="textEmailAddress"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/region_administrative_region"/>
                            <Spinner
                                android:focusable="false"
                                android:id="@+id/regionSpinner"
                                android:layout_width="310dp"
                                android:background="@drawable/bg_edittext"
                                android:layout_height="45dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/city_commune"/>
                            <Spinner
                                android:focusable="false"
                                android:id="@+id/citySpinner"
                                android:layout_width="310dp"
                                android:background="@drawable/bg_edittext"
                                android:layout_height="45dp"/>
<!--                            <EditText-->
<!--                                android:id="@+id/editTextLocality"-->
<!--                                android:background="@drawable/bg_edittext"-->
<!--                                android:layout_width="310dp"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:textColor="@color/colorWhite"-->
<!--                                android:fontFamily="@font/lato"-->
<!--                                android:textStyle="bold"/>-->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/address_line_1"/>
                            <EditText
                                android:id="@+id/editTextAddressStreet"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:inputType="text"
                                android:autofillHints="address" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewEmergencyContactDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/emergency_cont_details"
                            android:textSize="20sp"
                            android:paddingBottom="10dp"
                            android:textColor="?attr/secondaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/relation"/>
                            <RadioGroup
                                android:id="@+id/radionRelation"
                                android:layout_gravity="center"
                                android:layout_width="310dp"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/radioParent"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/parent"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                                <RadioButton
                                    android:id="@+id/radioFriend"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/friend"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                                <RadioButton
                                    android:id="@+id/radioOtherRelation"
                                    android:buttonTint="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/other"
                                    android:textColor="?attr/secondaryTextColor"
                                    />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/full_name"/>
                            <EditText
                                android:id="@+id/editTextFullNameRelation"
                                android:inputType="textPersonName"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:autofillHints="relation" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/secondaryTextColor"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:text="@string/mobile_number"/>
                            <EditText
                                android:id="@+id/editTextRelationPhone"
                                android:inputType="phone"
                                android:background="@drawable/bg_edittext"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                 </ScrollView>
                 <!-- third linear layout -->
                 <LinearLayout
                     android:layout_toEndOf="@+id/linearLayout2"
                     android:padding="10dp"
                     android:orientation="vertical"
                     android:id="@+id/linearLayout3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
                     <TextView
                         android:gravity="center"
                         android:id="@+id/textViewScan"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/add_tag"
                         android:textSize="20sp"
                         android:paddingBottom="10dp"
                         android:textColor="?attr/secondaryTextColor"
                         android:fontFamily="@font/lato"
                         android:textStyle="bold"/>
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">
                         <androidx.cardview.widget.CardView
                             android:id="@+id/cardViewTagStatus"
                             android:layout_centerInParent="true"
                             android:layout_width="100dp"
                             android:layout_height="100dp"
                             app:cardCornerRadius="200dp"
                             android:elevation="10dp"
                             app:cardBackgroundColor="@color/red"
                             android:layout_marginBottom="0dp">
                         </androidx.cardview.widget.CardView>
                         <androidx.cardview.widget.CardView
                             android:id="@+id/cardViewTag"
                             android:layout_centerInParent="true"
                             android:layout_marginEnd="40dp"
                             android:layout_width="80dp"
                             android:layout_height="80dp"
                             app:cardCornerRadius="100dp"
                             android:elevation="10dp"
                             app:cardBackgroundColor="@color/blue"
                             android:layout_marginBottom="0dp">
                             <ImageView
                                 android:layout_gravity="center"
                                 android:id="@+id/imageView"
                                 android:layout_width="50dp"
                                 android:layout_height="50dp"
                                 android:src="@drawable/ic_nfc"
                                 android:layout_centerHorizontal="true"/>
                         </androidx.cardview.widget.CardView>
                     </RelativeLayout>

                 </LinearLayout>
             </RelativeLayout>
         </androidx.cardview.widget.CardView>
     </LinearLayout>



</RelativeLayout>