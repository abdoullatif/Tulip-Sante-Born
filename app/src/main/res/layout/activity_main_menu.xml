<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/afrodoc"
    android:backgroundTint="@color/opaque"
    android:backgroundTintMode="src_over"
    android:padding="30dp"
    tools:context=".views.activities.MainMenuActivity">

    <ImageView
        android:id="@+id/imageViewDrawerLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dehaze_black_24dp"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Hello, Mr Diallo"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/lato"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/tuliplog"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewUltrasound"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/opaque"
            android:layout_marginBottom="30dp">
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:src="@drawable/add"
                    android:layout_height="130dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:text="Enregistrement"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="30dp"
            android:layout_toEndOf="@+id/cardViewThermal"
            android:id="@+id/cardViewEndoscope"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/opaque"            >
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:src="@drawable/ic_doc"
                    android:layout_height="130dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:text="Consultation"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewThermal"
            android:layout_below="@+id/cardViewUltrasound"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/opaque"            >
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:src="@drawable/ic_doc"
                    android:layout_height="130dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:text="Profile Info"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="130dp"
            android:layout_below="@+id/cardViewEndoscope"
            android:layout_toEndOf="@+id/cardViewThermal"
            android:id="@+id/cardViewPulse"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/opaque"            >
            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:src="@drawable/settings"
                    android:layout_height="130dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:text="Settings"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</RelativeLayout>