<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorP"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".views.fragments.ProfileFragment">

    <TextView
        android:paddingBottom="10dp"
        android:id="@+id/textViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_information"
        android:textSize="20sp"
        android:textColor="?attr/primaryTextColor"
        android:fontFamily="@font/lato"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@id/textViewProfile"
        android:foregroundTintMode="@color/opaque1"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/blank_profile_pic"
        app:civ_circle_background_color="@color/light_grey"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/blue"/>

    <TextView
        android:layout_below="@id/profileImage"
        android:id="@+id/textViewProfileName"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:fontFamily="@font/lato"
        android:textStyle="bold"/>
    <TextView
        android:layout_below="@id/textViewProfileName"
        android:id="@+id/textViewSpecialisation"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingBottom="5dp"
        android:textColor="?attr/primaryTextColor"
        android:fontFamily="@font/lato"
        android:textStyle="bold"/>



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_below="@id/textViewSpecialisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_below="@id/linearLayoutDash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/imageViewStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_information"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/last_name"/>
                        <TextView
                            android:id="@+id/textViewLast"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/first_name"/>
                        <TextView
                            android:id="@+id/textViewFirst"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/gender"/>
                        <TextView
                            android:id="@+id/textViewGender"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/age"/>
                        <TextView
                            android:id="@+id/textViewDob"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/speciality"/>
                        <TextView
                            android:id="@+id/textViewSpeciality"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/department"/>
                        <TextView
                            android:id="@+id/textViewDepartment"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/hospital"/>
                        <TextView
                            android:id="@+id/textViewHospital"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/id"/>
                        <TextView
                            android:id="@+id/textViewId"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingBottom="10dp"
                android:id="@+id/imageViewToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_details"
                android:textSize="20sp"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorA"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/address_line_1"/>
                        <TextView
                            android:id="@+id/textViewAddress1"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/commune"/>
                        <TextView
                            android:id="@+id/textViewCommune"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/city"/>
                        <TextView
                            android:id="@+id/textViewCity"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/country"/>
                        <TextView
                            android:id="@+id/textViewCountry"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/primary_phone_number"/>
                        <TextView
                            android:id="@+id/textViewPrimaryPhone"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/second_contact"/>
                        <TextView
                            android:id="@+id/textViewEmergencyPhone"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/email"/>
                        <TextView
                            android:id="@+id/textViewEmail"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/relation"/>
                        <TextView
                            android:id="@+id/textViewRelation"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/name_contact"/>
                        <TextView
                            android:id="@+id/textViewNameRelation"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"
                            android:text="@string/emergency_contact"/>
                        <TextView
                            android:id="@+id/textViewPhoneRelation"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>