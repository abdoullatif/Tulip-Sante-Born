<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.dialogFragment.AddUserDialogFragment">
    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:id="@+id/bottom_sheet"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        app:cardBackgroundColor="?attr/colorPOther"
        android:layout_marginBottom="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cancelDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:cardBackgroundColor="?attr/backButton"
            android:layout_marginBottom="0dp">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close_black_24dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_video_conference_user"
                android:layout_gravity="center"
                android:fontFamily="@font/lato"
                android:textColor="?attr/primaryTextColor"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:textColor="?attr/primaryTextColor"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="350dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="10dp"
                    android:inputType="textShortMessage"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10dp"
                    android:hint="Fode oussou"
                    android:padding="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skipe_id"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:textColor="?attr/primaryTextColor"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/editTextId"
                    android:layout_width="350dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="10dp"
                    android:inputType="textShortMessage"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10dp"
                    android:hint="Live:XXXXXXX"
                    android:padding="5dp" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSave"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/green"
                android:layout_marginBottom="0dp">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_user"
                    android:textSize="14sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/lato"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>