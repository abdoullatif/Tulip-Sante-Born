<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.dialogFragment.SATableSettingsDialogFragment">


    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:id="@+id/bottom_sheet"
        android:layout_width="500dp"
        android:layout_height="500dp"
        app:cardCornerRadius="30dp"
        android:elevation="0dp"
        app:cardBackgroundColor="?attr/colorPOther"
        android:layout_marginBottom="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cancelDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="?attr/backButton"
            android:layout_marginBottom="0dp">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close_black_24dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewMore"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center|top"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:text="@string/tablet_settings" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="60dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/eTTabId"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:inputType="textShortMessage"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                android:hint="Tab Id"
                android:drawableStart="@drawable/ic_baseline_tablet_24"
                android:drawablePadding="15dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/eTFtp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:inputType="textShortMessage"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                android:hint="User FTP"
                android:drawableStart="@drawable/ic_account_black_24dp"
                android:drawablePadding="15dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/eTFtpPass"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                android:hint="Password FTP"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="15dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/eTDB"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:inputType="textShortMessage"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                android:hint="User DB"
                android:drawableStart="@drawable/ic_account_black_24dp"
                android:drawablePadding="15dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/eTDBPass"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                android:hint="Password DB"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="15dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/eTWeb"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:inputType="textShortMessage"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                android:hint="WWW"
                android:drawableStart="@drawable/ic_baseline_language_24"
                android:drawablePadding="15dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="5dp"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSave"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:cardCornerRadius="20dp"
                android:tooltipText="Validate"
                app:cardBackgroundColor="@color/green">
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/imageViewSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_check_24"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
