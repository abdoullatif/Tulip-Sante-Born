<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorP"
    android:backgroundTint="@color/opaque"
    android:backgroundTintMode="src_over"
    tools:context=".views.activities.MainMenuActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="?attr/colorPD"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/tuliplog"
                android:layout_centerHorizontal="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewDashboard"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="?attr/opaque2"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:src="@drawable/ic_dash"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Dashboard"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPatient"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:src="@drawable/ic_fever"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="@string/patient"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProfile"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:src="@drawable/ic_doc_1"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="@string/profile"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSetting"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:src="@drawable/ic_settings1"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="@string/settings"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewLogout"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:src="@drawable/ic_logout"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="@string/log_out"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSupport"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginTop="50dp">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:src="@drawable/ic_support"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Support"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_toEndOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"/>
</RelativeLayout>