<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorP">@color/colorPrimary</item>
        <item name="colorPD">@color/colorPrimaryDark</item>
        <item name="colorA">@color/colorAccent</item>
        <item name="colorA2">@color/colorAccent2</item>
        <item name="primaryTextColor">@color/colorWhite</item>
        <item name="secondaryTextColor">@color/grey</item>
        <item name="buttonNormalColor">@color/colorAccent</item>
        <item name="opaque2">@color/opaque2</item>
        <item name="opaque">@color/opaque</item>
        <item name="backButton">@color/colorPrimary</item>

        <item name="colorPOther">@color/colorAccent</item>
        <item name="colorPSDOther">@color/colorPrimary</item>
        <item name="colorPDOther">@color/colorPrimaryDark</item>

        <item name="colorConsultationTools">@color/colorPrimary</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorP">@color/colorWhite</item>
        <item name="colorPD">@color/colorAccent2</item>
        <item name="colorA">@color/light_grey</item>
        <item name="colorA2">@color/light_grey</item>
        <item name="primaryTextColor">@color/dark_grey</item>
        <item name="secondaryTextColor">@color/dark_grey</item>
        <item name="buttonNormalColor">@color/colorAccent</item>
        <item name="opaque2">@color/opaque</item>
        <item name="opaque">@color/darkgrey</item>
        <item name="backButton">@color/blue</item>

        <item name="colorPOther">@color/colorWhite</item>
        <item name="colorPSDOther">@color/colorAccent2</item>
        <item name="colorPDOther">@color/colorAccent</item>

        <item name="colorConsultationTools">@color/colorAccent2</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
